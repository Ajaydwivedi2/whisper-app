<%- include('partials/header') %>

  <div class="container mt-5">
    <h1>Login</h1>

    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">

            <!-- Makes POST request to /login route -->
            <form action="/login" method="POST">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" autocomplete="off" required name="username" value=<%=username%>
                >
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" required name="password" value=<%=password%> >
                <span style="color:red;">
                  <%=errMsg%>
                </span>
              </div>
              <button type="submit" class="btn btn-dark">Login</button>
              <span>or</span>
              <a class="btn btn-light" href="/register" role="button">Register</a>
            </form>
          </div>
        </div>
      </div>

      <div class="col-sm-4">
        <div class="card">
          <div class="card-body">
            <a class="btn btn-block btn-google btn-social" href="/auth/google" role="button">
              <i class="fab fa-google"></i>
              Sign In with Google
            </a>
          </div>
          <div class="card-body">
            <a class="btn btn-block btn-facebook btn-social" href="/auth/foogle" role="button">
              <i class="fab fa-facebook"></i>
              Sign In with Facebook
            </a>
          </div>
        </div>
      </div>

    </div>
  </div>

  <%- include('partials/footer') %>